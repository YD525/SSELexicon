<Window x:Class="SSELex.MainGui"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SSELex"
        mc:Ignorable="d"
        Title="SSELexicon" PreviewKeyDown="Window_PreviewKeyDown" Height="850" Width="1200" Loaded="Window_Loaded" Style="{DynamicResource DefWin}" WindowStartupLocation="CenterScreen" AllowDrop="True" PreviewDragEnter="ModTransView_DragEnter" PreviewDrop="ModTransView_Drop"  PreviewDragLeave="ModTransView_DragLeave" Closing="Window_Closing" SizeChanged="Window_SizeChanged">

    <Window.Resources>
        <Storyboard x:Key="BreathingEffect" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation
            Storyboard.TargetName="NoteEffect"
            Storyboard.TargetProperty="Opacity"
            From="0.3" To="1"
            Duration="0:0:1.0"/>
        </Storyboard>

        <Storyboard x:Key="ScanAnimation" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation
            Storyboard.TargetName="ScanTransform"
            Storyboard.TargetProperty="X"
            From="-30"  To="{Binding ActualWidth, ElementName=ProcessBar}" Duration="0:0:2" />
        </Storyboard>

        <Storyboard x:Key="ExpandMenu">
            <DoubleAnimation Storyboard.TargetName="LeftMenu"
                         Storyboard.TargetProperty="Height"
                         From="0" To="450" Duration="0:0:0.3"
                         AccelerationRatio="0.3" DecelerationRatio="0.7"/>
        </Storyboard>

        <Storyboard x:Key="CollapseMenu">
            <DoubleAnimation Storyboard.TargetName="LeftMenu"
                         Storyboard.TargetProperty="Height"
                         From="450" To="0" Duration="0:0:0.3"
                         AccelerationRatio="0.3" DecelerationRatio="0.7"/>
        </Storyboard>
    </Window.Resources>

    <Border Style="{DynamicResource BorderWinBackground}" Name="MainBackGround" Background="#FF282828">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="8"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" MouseLeftButtonDown="WinHead_MouseLeftButtonDown" Style="{DynamicResource PanelHeader}" Background="#FF282828">
            </Border>
            <Grid Grid.Row="0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>
                <Label Foreground="White" Style="{DynamicResource CaptionFont}" Grid.Column="0">
                    SSELexicon XT
                </Label>

                <Border Style="{DynamicResource BlockButton}" Grid.Column="1" PreviewMouseDown="ShowLeftMenu">
                    <Grid>
                        <ContentControl Style="{DynamicResource NoteIconStyle}" Name="NoteEffect" Panel.ZIndex="1"/>
                    </Grid>
                </Border>


                <Border Style="{DynamicResource BlockButton}" Grid.Column="3">
                    <ContentControl Style="{DynamicResource MinimizeIconStyle}"/>
                </Border>

                <Border Style="{DynamicResource BlockButton}" Grid.Column="4">
                    <ContentControl Style="{DynamicResource MaximizeIconStyle}"/>
                </Border>
                <Border Style="{DynamicResource BlockButton}" Grid.Column="5">
                    <ContentControl Style="{DynamicResource CloseIconStyle}" Grid.Column="3"/>
                </Border>
            </Grid>

            <Grid Grid.Row="1">

                <Border Style="{DynamicResource LeftMenu}" Name="LeftMenu" Height = "450">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Label Style="{DynamicResource ClassFont}">
                                Local Engine
                            </Label>
                        </Grid>

                        <Grid Background="#FF282828" Cursor="Hand" Grid.Row="2">
                            <ContentControl  Style="{DynamicResource IndicatorOffStyle}" />

                            <StackPanel Orientation="Horizontal">
                                <Grid Style="{DynamicResource NodeDisable}">
                                </Grid>
                                <Label Foreground="White" VerticalAlignment="Center" FontSize="13" FontWeight="Bold" Margin="10 0 0 0">
                                    PreTranslate Node
                                </Label>
                            </StackPanel>
                        </Grid>

                        <Grid Grid.Row="4">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <Label Style="{DynamicResource ClassFont}">
                                    AI Translation Service
                                </Label>

                             
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 5 0">
                                <Label Style="{DynamicResource CheckBoxFont}" Margin="5 0 0 0">
                                    Context Generation
                                </Label>

                                <CheckBox Name="ContextGeneration" VerticalAlignment="Center" Margin="0 0 0 0" Grid.Column="6" Foreground="White" Style="{DynamicResource ToggleCircleCheckBox}" Click="ContextGeneration_Click"/>
                            </StackPanel>
                        </Grid>

                        <StackPanel Orientation="Vertical" Grid.Row="6" Grid.RowSpan="12" HorizontalAlignment="Left" Panel.ZIndex="9" Margin="-18 0 0 0" Name="RightContextIndicator" Visibility="Collapsed">
                            <Rectangle Width="3" Height="60" Fill="White" />

                            <TextBlock Text="Context Generation" Style="{DynamicResource ContextStyle}"/>

                            <Rectangle Width="3" Height="60" Fill="White" VerticalAlignment="Bottom" />
                        </StackPanel>

                        <Grid Background="#FF282828" Cursor="Hand" Grid.Row="6">
                            <ContentControl  Style="{DynamicResource IndicatorOnStyle}" />

                            <StackPanel Orientation="Horizontal">
                                <Grid Style="{DynamicResource NodeEnable}">
                                </Grid>
                                <Label Foreground="White" VerticalAlignment="Center" FontSize="13" FontWeight="Bold" Margin="10 0 0 0">
                                    Gemini Node
                                </Label>
                            </StackPanel>
                        </Grid>

                        <Grid Background="#FF282828" Cursor="Hand" Grid.Row="8">
                            <ContentControl  Style="{DynamicResource IndicatorOffStyle}" />

                            <StackPanel Orientation="Horizontal">
                                <Grid Style="{DynamicResource NodeDisable}">
                                </Grid>
                                <Label Foreground="White" VerticalAlignment="Center" FontSize="13" FontWeight="Bold" Margin="10 0 0 0">
                                    ChatGpt Node
                                </Label>
                            </StackPanel>

                        </Grid>

                        <Grid Background="#FF282828" Cursor="Hand" Grid.Row="10">
                            <ContentControl  Style="{DynamicResource IndicatorOffStyle}" />

                            <StackPanel Orientation="Horizontal">
                                <Grid Style="{DynamicResource NodeDisable}">
                                </Grid>
                                <Label Foreground="White" VerticalAlignment="Center" FontSize="13" FontWeight="Bold" Margin="10 0 0 0">
                                    Cohere Node
                                </Label>
                            </StackPanel>
                        </Grid>

                        <Grid Background="#FF282828" Cursor="Hand" Grid.Row="12">
                            <ContentControl  Style="{DynamicResource IndicatorOffStyle}" />

                            <StackPanel Orientation="Horizontal">
                                <Grid Style="{DynamicResource NodeDisable}">
                                </Grid>
                                <Label Foreground="White" VerticalAlignment="Center" FontSize="13" FontWeight="Bold" Margin="10 0 0 0">
                                    DeepSeek Node
                                </Label>
                            </StackPanel>
                        </Grid>

                        <Grid Background="#FF282828" Cursor="Hand" Grid.Row="14">
                            <ContentControl  Style="{DynamicResource IndicatorOffStyle}" />

                            <StackPanel Orientation="Horizontal">
                                <Grid Style="{DynamicResource NodeDisable}">
                                </Grid>
                                <Label Foreground="White" VerticalAlignment="Center" FontSize="13" FontWeight="Bold" Margin="10 0 0 0">
                                    Baichuan Node
                                </Label>
                            </StackPanel>
                        </Grid>

                        <Grid Background="#FF282828" Cursor="Hand" Grid.Row="16">
                            <ContentControl  Style="{DynamicResource IndicatorOffStyle}" />

                            <StackPanel Orientation="Horizontal">
                                <Grid Style="{DynamicResource NodeDisable}">
                                </Grid>
                                <Label Foreground="White" VerticalAlignment="Center" FontSize="13" FontWeight="Bold" Margin="10 0 0 0">
                                    LocalAI Node
                                </Label>
                            </StackPanel>
                        </Grid>

                        <Grid Grid.Row="18">
                            <Label Style="{DynamicResource ClassFont}">
                               Cloud Translation Service
                            </Label>
                        </Grid>

                        <Grid Background="#FF282828" Cursor="Hand" Grid.Row="20">
                            <ContentControl  Style="{DynamicResource IndicatorOffStyle}" />

                            <StackPanel Orientation="Horizontal">
                                <Grid Style="{DynamicResource NodeDisable}">
                                </Grid>
                                <Label Foreground="White" VerticalAlignment="Center" FontSize="13" FontWeight="Bold" Margin="10 0 0 0">
                                    DeepL Node
                                </Label>
                            </StackPanel>
                        </Grid>

                        <Grid Background="#FF282828" Cursor="Hand" Grid.Row="22">
                            <ContentControl  Style="{DynamicResource IndicatorOffStyle}" />

                            <StackPanel Orientation="Horizontal">
                                <Grid Style="{DynamicResource NodeDisable}">
                                </Grid>
                                <Label Foreground="White" VerticalAlignment="Center" FontSize="13" FontWeight="Bold" Margin="10 0 0 0">
                                    Google Node
                                </Label>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!--Mask-->
                <Border Visibility="Collapsed" Name="Mask" Style="{DynamicResource MaskStyle}" MouseDown="Mask_MouseDown">
                </Border>


                <Grid Style="{DynamicResource Frame}">

                    <Border Style="{DynamicResource NavStyle}">
                        <ContentControl Style="{DynamicResource TriangleExpandIconStyle}"/>
                    </Border>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="1" Background="#FF282828">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="1" Margin="10 0 10 0">
                                <Grid Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="135"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Background="#FF0A61AF" Margin="0 0 0 0" CornerRadius="5" Grid.Column="0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1*"/>
                                            </Grid.ColumnDefinitions>

                                            <Border CornerRadius="5 0 0 5" Background="#FF0B74D1" Grid.Column="0" Cursor="Hand">
                                                <Grid>
                                                    <Label Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        Normal
                                                    </Label>
                                                    <Grid Width="25" Height="2" Background="White" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                                                    </Grid>
                                                </Grid>
                                            </Border>

                                            <Border CornerRadius="0 5 5 0" Background="#FF0A61AF" Grid.Column="1" Cursor="Hand">
                                                <Grid>
                                                    <Label Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        Quick
                                                    </Label>
                                                </Grid>
                                            </Border>

                                        </Grid>
                                    </Border>

                                    <Border  Background="#FF0A61AF" CornerRadius="5" Margin="5 0 0 0" Grid.Column="1">
                                        <Grid>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1*"/>
                                                    <ColumnDefinition Width="65"/>
                                                </Grid.ColumnDefinitions>
                                                <Label Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="0" Margin="5 0 0 0" Panel.ZIndex="999">
                                                    STRINGS(5000/10000)
                                                </Label>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1" Margin="0 0 5 0" Panel.ZIndex="999">
                                                    <ContentControl Style="{DynamicResource PlayIconStyle}" Panel.ZIndex="1"/>
                                                    <ContentControl Style="{DynamicResource PauseIconStyle}" Panel.ZIndex="1"/>
                                                    <ContentControl Style="{DynamicResource CancelPlayIconStyle}" Panel.ZIndex="1"/>
                                                </StackPanel>
                                            </Grid>
                                            <Border Name="ProcessBar" BorderThickness="0 0 3 0" BorderBrush="White" CornerRadius="5" Background="#FF74C2FF" Opacity="0.35" Width="130" HorizontalAlignment="Left" Panel.ZIndex="1">
                                                <Grid ClipToBounds="True">
                                                    <!-- ScanLine -->
                                                    <Rectangle Width="30" HorizontalAlignment="Left" RadiusX="5" RadiusY="5" Opacity="0.65">
                                                        <Rectangle.Fill>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                                <GradientStop Color="#00FFFFFF" Offset="0"/>
                                                                <GradientStop Color="#B3FFFFFF" Offset="0.5"/>
                                                                <GradientStop Color="#00FFFFFF" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Rectangle.Fill>
                                                        <Rectangle.RenderTransform>
                                                            <TranslateTransform x:Name="ScanTransform" />
                                                        </Rectangle.RenderTransform>
                                                    </Rectangle>
                                                </Grid>
                                            </Border>
                                        </Grid>
                                    </Border>

                                    <Grid Margin="5 0 5 0"  Grid.Column="2">
                                        <Border Margin="0 0 0 0" CornerRadius="5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="80"/>
                                                    <ColumnDefinition Width="1*"/>
                                                </Grid.ColumnDefinitions>
                                                <Label Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="0">
                                                    Type Selector
                                                </Label>
                                                <ComboBox Grid.Column="1" VerticalAlignment="Center" Cursor="Hand" HorizontalAlignment="Stretch" Height="30" Style="{StaticResource CustomComboBoxStyle}" Margin="0 0 8 0">
                                                </ComboBox>
                                            </Grid>
                                        </Border>
                                    </Grid>

                                    <Border Background="#FF7B7B7B" Margin="5 0 0 0" CornerRadius="5" Grid.Column="3">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30"/>
                                                <ColumnDefinition Width="1*"/>
                                            </Grid.ColumnDefinitions>

                                            <ContentControl Style="{DynamicResource MagnifyingGlassIconStyle}" Panel.ZIndex="1" Height="15" Width="15"/>

                                            <Border CornerRadius="0 5 5 0" Background="#FF3A3A3A" Grid.Column="1">
                                                <TextBox Margin="5 0 5 0" Name="SearchBox" TabIndex="0" Grid.Column="1" Background="{x:Null}" BorderBrush="{x:Null}" SelectionBrush="#FF135FB8" BorderThickness="0" Foreground="White" CaretBrush="White" VerticalContentAlignment="Center" FontSize="13" >

                                                </TextBox>
                                            </Border>

                                        </Grid>
                                    </Border>

                                    <Grid Grid.Column="4">
                                        <StackPanel Orientation="Horizontal">

                                            <Border  CornerRadius="5" Background="#FF7B7B7B" Width="80" Name="StartTransBtn"  Margin="5 0 0 0">
                                                <Label Name="LoadFileButton" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand">
                                                    LoadFile
                                                </Label>
                                            </Border>

                                            <Border  CornerRadius="5" Background="#FF7B7B7B" Width="45" Margin="5 0 0 0">
                                                <ContentControl Style="{DynamicResource CancelPlayIconStyle}" Panel.ZIndex="1"/>
                                            </Border>
                                        </StackPanel>
                                    </Grid>

                                </Grid>

                            </Grid>

                            <Grid Grid.Row="3" Margin="10 0 10 0">
                                <StackPanel Orientation="Horizontal">
                                    <Grid  Margin="0 0 0 0"  Width="300" HorizontalAlignment="Left">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid Grid.Column="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="35"/>
                                                    <ColumnDefinition Width="1*"/>
                                                </Grid.ColumnDefinitions>
                                                <Label Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    From
                                                </Label>
                                                <ComboBox Grid.Column="1" VerticalAlignment="Center" Cursor="Hand" HorizontalAlignment="Stretch" Height="30" Style="{StaticResource CustomComboBoxStyle}">
                                                </ComboBox>
                                            </Grid>
                                            <Grid Grid.Column="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="35"/>
                                                    <ColumnDefinition Width="1*"/>
                                                </Grid.ColumnDefinitions>
                                                <Label Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    To
                                                </Label>
                                                <ComboBox Grid.Column="1" VerticalAlignment="Center" Cursor="Hand" HorizontalAlignment="Stretch" Height="30" Style="{StaticResource CustomComboBoxStyle}">
                                                </ComboBox>
                                            </Grid>
                                        </Grid>
                                    </Grid>

                                    <Border Grid.Column="2" ToolTip="After clicking, the source text will be reloaded from the original data source to synchronize or refresh the content." Name="DeleteDictionaryBtn" CornerRadius="5" Background="#FF7B7B7B" Height="30" Margin="10 0 0 0" Opacity="0.3" Cursor="Hand">
                                        <Label Padding="10 0 10 0"  Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            RefreshSourceText
                                        </Label>
                                    </Border>

                                    <Border CornerRadius="5" Background="#FF7B7B7B"  Height="30" Margin="10 0 0 0" Cursor="Hand" Grid.Column="4">
                                        <Label Padding="10 0 10 0"  Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            ClearCache
                                        </Label>
                                    </Border>

                                    <Border  CornerRadius="5" Background="#FF7B7B7B" Height="30" Margin="10 0 0 0"  Cursor="Hand" Grid.Column="5">
                                        <Label Padding="10 0 10 0"  Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            ReSet
                                        </Label>
                                    </Border>

                                    <Label VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" Margin="5 0 0 0">
                                        MarkLine
                                    </Label>

                                    <Border CornerRadius="5" Background="White" Width="20" Height="20" Margin="5 0 0 0" Cursor="Hand">
                                    </Border>

                                    <Border CornerRadius="5" Background="#FF0B9BD4" Width="20" Height="20" Margin="5 0 0 0" Cursor="Hand">
                                    </Border>

                                    <Border CornerRadius="5" Background="#FFE59924" Width="20" Height="20" Margin="5 0 0 0" Cursor="Hand">
                                    </Border>


                                    <Border CornerRadius="5" Background="#FF7B7B7B"  Height="30" Margin="10 0 0 0" Cursor="Hand" Grid.Column="4">
                                        <Label Padding="10 0 10 0"  Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            Export As...
                                        </Label>
                                    </Border>
                                </StackPanel>
                            </Grid>

                            <Grid Height="30" Style="{DynamicResource ListViewHeader}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.35*"/>
                                    <ColumnDefinition Width="0.5*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"  Foreground="White">
                                    Type
                                </Label>
                                <Label Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"  Foreground="White">
                                    Key
                                </Label>
                                <Label Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"  Foreground="White">
                                    Original
                                </Label>
                                <Label Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center"  Foreground="White">
                                    Translated
                                </Label>
                            </Grid>
                            <Grid Name="TransView" Grid.Row="6" Panel.ZIndex="999" Background="#FF282828" MouseLeave="TransView_MouseLeave" Margin="10 0 10 0">
                            </Grid>
                        </Grid>
                    </Grid>

                    <!--需要做样式的了 Auto Download也需要 负载均衡可视化-->
                </Grid>
                <Border  CornerRadius="0 0 8 8" Style="{DynamicResource Panel}">
                </Border>
            </Grid>





        </Grid>
    </Border>

</Window>
