<Window x:Class="SSELex.MainGui"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SSELex"
        mc:Ignorable="d"
        Title="SSELexicon" PreviewKeyDown="Window_PreviewKeyDown" Height="850" Width="1200" Loaded="Window_Loaded" Style="{DynamicResource DefWin}" WindowStartupLocation="CenterScreen" AllowDrop="True" PreviewDragEnter="ModTransView_DragEnter" PreviewDrop="ModTransView_Drop"  PreviewDragLeave="ModTransView_DragLeave" Closing="Window_Closing" SizeChanged="Window_SizeChanged">

    <Window.Resources>
        <Storyboard x:Key="BreathingEffect" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation
            Storyboard.TargetName="NoteEffect"
            Storyboard.TargetProperty="Opacity"
            From="0.3" To="1"
            Duration="0:0:1.0"/>
        </Storyboard>

        <Storyboard x:Key="ScanAnimation" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation
            Storyboard.TargetName="ScanTransform"
            Storyboard.TargetProperty="X"
            From="0" To="70" Duration="0:0:2" />
        </Storyboard>
    </Window.Resources>
    
    <Border Style="{DynamicResource BorderWinBackground}" Name="MainBackGround">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="8"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" MouseLeftButtonDown="WinHead_MouseLeftButtonDown" Style="{DynamicResource PanelHeader}">
            </Border>
            <Grid Grid.Row="0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>
                <Label Foreground="White" Style="{DynamicResource CaptionFont}" Grid.Column="0">
                    SSELexicon XT
                </Label>

                <Border Style="{DynamicResource BlockButton}" Grid.Column="1">
                    <Grid>
                        <ContentControl Style="{DynamicResource NoteIconStyle}" Name="NoteEffect" Panel.ZIndex="1"/>
                    </Grid>
                </Border>


                <Border Style="{DynamicResource BlockButton}" Grid.Column="3">
                    <ContentControl Style="{DynamicResource MinimizeIconStyle}"/>
                </Border>

                <Border Style="{DynamicResource BlockButton}" Grid.Column="4">
                    <ContentControl Style="{DynamicResource MaximizeIconStyle}"/>
                </Border>
                <Border Style="{DynamicResource BlockButton}" Grid.Column="5">
                    <ContentControl Style="{DynamicResource CloseIconStyle}" Grid.Column="3"/>
                </Border>
            </Grid>

            <Grid Grid.Row="1">
                <Grid Panel.ZIndex="100">

                    <Border Style="{DynamicResource NavStyle}">
                        <ContentControl Style="{DynamicResource TriangleExpandIconStyle}"/>
                    </Border>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="1" Background="#FF282828">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="1" Margin="10 0 10 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Background="#FF0A61AF" Margin="0 0 0 0" CornerRadius="5">
                                            <StackPanel Orientation="Horizontal" Margin="10 0 10 0">
                                                <Label Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                    Type Selector :
                                                </Label>
                                                <ComboBox Grid.Column="1" VerticalAlignment="Center" Cursor="Hand" Width="100"  Height="30" Style="{StaticResource CustomComboBoxStyle}" Margin="5 0 0 0">
                                                </ComboBox>
                                            </StackPanel>
                                        </Border>

                                        <Border  Background="#FF0A61AF" CornerRadius="5" Margin="5 0 0 0">
                                            <Grid>
                                                <StackPanel Orientation="Horizontal" Margin="10 0 10 0" Panel.ZIndex="999">
                                                    <Label Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                        STRINGS(5000/10000)
                                                    </Label>
                                                    <ContentControl Style="{DynamicResource PlayIconStyle}" Panel.ZIndex="1"/>
                                                    <ContentControl Style="{DynamicResource PauseIconStyle}" Panel.ZIndex="1"/>
                                                    <ContentControl Style="{DynamicResource CancelPlayIconStyle}" Panel.ZIndex="1"/>
                                                </StackPanel>
                                                <Border Name="ProcessBar" BorderThickness="0 0 3 0" BorderBrush="White" CornerRadius="5" Background="#FF74C2FF" Opacity="0.3" Width="100" HorizontalAlignment="Left" Panel.ZIndex="1">
                                                    <Grid ClipToBounds="True">
                                                        <!-- ScanLine -->
                                                        <Rectangle Width="30" HorizontalAlignment="Left" RadiusX="5" RadiusY="5" Opacity="0.6">
                                                            <Rectangle.Fill>
                                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                                    <GradientStop Color="#00FFFFFF" Offset="0"/>
                                                                    <GradientStop Color="#B3FFFFFF" Offset="0.5"/>
                                                                    <GradientStop Color="#00FFFFFF" Offset="1"/>
                                                                </LinearGradientBrush>
                                                            </Rectangle.Fill>
                                                            <Rectangle.RenderTransform>
                                                                <TranslateTransform x:Name="ScanTransform" />
                                                            </Rectangle.RenderTransform>
                                                        </Rectangle>
                                                    </Grid>
                                                </Border>
                                            </Grid>
                                        </Border>

                                       
                                    </StackPanel>
                                </Grid>
                            </Grid>

                            <Grid Height="30" Style="{DynamicResource ListViewHeader}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.35*"/>
                                    <ColumnDefinition Width="0.5*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"  Foreground="White">
                                    Type
                                </Label>
                                <Label Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"  Foreground="White">
                                    Key
                                </Label>
                                <Label Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"  Foreground="White">
                                    Original
                                </Label>
                                <Label Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center"  Foreground="White">
                                    Translated
                                </Label>
                            </Grid>
                            <Grid Name="TransView" Grid.Row="3" Panel.ZIndex="999" Background="#FF282828" MouseLeave="TransView_MouseLeave" Margin="10 0 10 0">
                            </Grid>
                        </Grid>
                    </Grid>
                   
                    <!--需要做样式的了 Auto Download也需要 负载均衡可视化-->
                </Grid>
                <Border  CornerRadius="0 0 8 8" Style="{DynamicResource Panel}">
                </Border>
            </Grid>

           



        </Grid>
    </Border>
    
</Window>
