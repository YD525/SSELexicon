    <Authors></Authors>
    <PackageIcon>Logo.png</PackageIcon>
    <ApplicationIcon>Logo.ico</ApplicationIcon>
    <FileVersion>1.4.619</FileVersion>
    <AssemblyVersion>1.4.619</AssemblyVersion>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="DownICO.png" />
    <None Remove="IDERule\Lua.xshd" />
    <None Remove="IDERule\TextStyle.xshd" />
