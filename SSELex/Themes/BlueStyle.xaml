    <Style x:Key="IndicatorOffStyle" TargetType="ContentControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <Border CornerRadius="3,3,0,0" Width="30" Height="10" Background="#FF575757"
                            VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,0">
                        <Border CornerRadius="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                                Width="25" Height="3">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                    <GradientStop Color="#FF2E2E2E" Offset="0.0"/>
                                    <GradientStop Color="#FF262626" Offset="0.2"/>
                                    <GradientStop Color="#FF252525" Offset="0.5"/>
                                    <GradientStop Color="#FF262626" Offset="0.8"/>
                                    <GradientStop Color="#FF2E2E2E" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

