<Window x:Class="SSELex.SearchText"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SSELex"
        mc:Ignorable="d"
        Title="SearchText" Height="78" Width="280" WindowStartupLocation="CenterOwner" KeyDown="Window_KeyDown">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox Width="180" VerticalAlignment="Center" Height="20" Name="Search" TextChanged="Search_TextChanged">
            </TextBox>
            <Button VerticalAlignment="Center" Click="Button_Click">
                Search
            </Button>
        </StackPanel>
       
    </Grid>
</Window>
