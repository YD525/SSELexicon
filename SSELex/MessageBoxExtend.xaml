<Window x:Class="SSELex.MessageBoxExtend"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SSELex"
        mc:Ignorable="d"
        Title="MessageBoxExtend"  Height="450" Width="800" ShowInTaskbar="False">
    <Window.Style>
        <Style TargetType="Window">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="WindowStyle" Value="None" />
            <Setter Property="ResizeMode" Value="CanResize" />
            <Setter Property="AllowsTransparency" Value="True" />
            <Setter Property="WindowChrome.WindowChrome">
                <Setter.Value>
                    <WindowChrome CaptionHeight="0" ResizeBorderThickness="0"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Style>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="370"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid Background="Black" Opacity="0.7" Panel.ZIndex="1" Grid.Column="0" Grid.ColumnSpan="3">
        </Grid>

        <Grid Panel.ZIndex="2" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="1"  Background="#FF0576CD" Name="GroundColor">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="38"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Label Name="Caption" Foreground="White" FontSize="18" VerticalAlignment="Center" Margin="13 0 0 0">
                        Tittle
                    </Label>
                    <Grid Grid.Row="1">
                        <TextBox Margin="15 0 13 0" Name="CurrentMsg" FontSize="15" Background="{x:Null}" BorderBrush="{x:Null}" BorderThickness="0" TextWrapping="Wrap" AcceptsReturn="True" Foreground="White">
                            Test Line
                        </TextBox>
                    </Grid>

                    <Grid Grid.Row="1" HorizontalAlignment="Right" Height="40" Margin="0 10 0 5" VerticalAlignment="Bottom">
                        <StackPanel Orientation="Horizontal" Margin="0 0 5 0">
                            <Border BorderThickness="1" BorderBrush="White" Margin="5" Background="#FF0C539C" Width="60" PreviewMouseDown="Confirm" Name="ConfirmBtn" Cursor="Hand">
                                <Label Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15">
                                    确认
                                </Label>
                            </Border>

                            <Border BorderThickness="1" BorderBrush="White" Margin="5" Background="#FF0887E9" Width="60" PreviewMouseDown="Cancel" Name="CancelBtn" Cursor="Hand">
                                <Label Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15">
                                    取消
                                </Label>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

    </Grid>
</Window>
