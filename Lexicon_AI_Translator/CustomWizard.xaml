<Window x:Class="LexTranslator.CustomWizard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LexTranslator"
        mc:Ignorable="d"
        Title="CustomWizard" Height="450" Width="500" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF424242">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="5 0 5 0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Label VerticalAlignment="Center" FontSize="17" FontWeight="DemiBold" Foreground="White" Background="#FF2F2F2F">
                    1/5
                </Label>

                <Label Name="Tittle" FontSize="13" VerticalAlignment="Center" Foreground="White">
                    Add Translation Platform – Select Platform Type
                </Label>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" HorizontalAlignment="Right" Margin="5 0 5 0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Border CornerRadius="6" BorderThickness="1" BorderBrush="White" Background="#FF2F2F2F" Cursor="Hand" Margin="0 0 5 0">
                    <Label Foreground="White" VerticalAlignment="Center" IsHitTestVisible="False">
                        Cancel
                    </Label>
                </Border>

                <Border CornerRadius="6" BorderThickness="1" BorderBrush="White" Background="#FF2F2F2F" Cursor="Hand">
                    <Label Foreground="White" VerticalAlignment="Center" IsHitTestVisible="False">
                        Next
                    </Label>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
